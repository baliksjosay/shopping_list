<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>All Subcounties</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">Subcounties in uganda</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Subcounties</h1>
        <a href="/new" class="new-button">+ Add Subcounty</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>Subcounties</span>
        </div>
        <ul class="table-body">
          <% subcounties.forEach((subcounty) => { %>
            <li>
              <div class="item-data">
                <span class="id-column"><%= subcounty.countyId %></span>
                <span class="name-column"><%= subcounty.subcounty %></span>
                <!-- <span class="name-column"><%= subcounty.county %></span>
                <span class="name-column"><%= subcounty.district %></span> -->

              </div>
              <div class="item-menu">
                <form action="/delete/<%= subcounty.id %>" method="post">
                  <input type="submit" value="Delete">
                </form>
                <a href="/edit/<%= subcounty.id %>">Edit</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>