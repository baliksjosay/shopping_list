<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Admin Regions</title>
    <link rel="stylesheet" href="../css/style.css">
    <script src="../js/send_url.js"></script>
  </head>
  <body>
    <header>
      <a href="/" class="header-logo">Admin Regions</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>Districts In Uganda</h1>
        <a href="/new" class="new-button">+ Add District</a>
      </div>
      <div class="index-table-wrapper">
        <div class="table-head">
          <span class="id-column">ID</span>
          <span>District</span>
        </div>
        <ul class="table-body">
          <% districts.forEach((district) => { %>
            <li>
              <div class="item-data">
                <span class="id-column"><%= district.id %></span>
                <span class="name-column"><%= district.district %></span>
              </div>
              <div class="item-menu">
                <!-- <form action="/delete/<%= district.id %>" method="post">
                  <input type="submit" value="Delete">
                </form> -->
                <a href="/view-counties/<%= district.district%>">View Counties</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>